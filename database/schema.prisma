generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model Guilds {
  id      Int     @id @default(autoincrement())
  name    String
  guildId String
  prefix  String  @default("?")
  mode    Boolean @default(false)
  afkMembers     AFK[]
}

model AFK {
  id        Int    @id @default(autoincrement())
  userId    Int    @unique
  reason    String
  timestamp Int
  guild     Guilds @relation(fields: [userId], references: [id])
}
