datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model report {
  id     Int     @id @default(autoincrement())
  reason String
  reporterID String
  offenderID String
  guild  guild[]
}

model guild {
  id        Int     @id @default(autoincrement())
  guildID   String  @unique
  guildName String
  logsID    String
  reports   report[]
  mode      Boolean @default(false)

  @@index([id])
}

model afk {
  guildID   String @unique
  userID    String @unique
  reason    String
  mentions  Int
  timestamp String
}
