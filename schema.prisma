datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Guild Model
model Guild {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  guildID   String @unique
  guildName String
  prefix    String @default(".")
}

// Afk Model
model Afk {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  guildID   String @unique
  userID    String @unique
  reason    String
  mentions  Int
  timestamp String
}
