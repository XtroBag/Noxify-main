datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

// Guild Model
model Guild {
  id        Int       @id @default(autoincrement())
  guildID   String    @unique
  guildName String
  prefix    String    @default("?")
  settings  Settings  @relation(fields: [id], references: [id])

  @@index([id])
}

model Settings {
  id       Int     @id @default(autoincrement())
  textcmds Boolean
  guild    Guild[]
}

// Afk Model
model Afk {
  guildID   String @unique
  userID    String @unique
  reason    String
  mentions  Int
  timestamp String
}
