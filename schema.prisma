datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Questions {
  id          Int          @id @default(autoincrement())
  questionID  String
  label       String
  description String
  ticketmenu  TicketMenu[]
}

model TicketMenu {
  id        Int     @id @default(autoincrement())
  menuID    String 
  creatorID String  @unique
  questions Questions[]
  guild     Guild[]

  @@index([id])
}

model Guild {
  id          Int          @id @default(autoincrement())
  ticketmenus TicketMenu[]
  guildID     String       @unique
  guildName   String
  logsID      String
  mode        Boolean      @default(false)

  @@index([id])
}

model afk {
  guildID   String @unique
  userID    String @unique
  reason    String
  mentions  Int
  timestamp String
}
